<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enseignant.EnseignantMesResultats"
    android:background="@color/darkblue2"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/backMesResultats"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChartResultats"
        android:layout_width="375dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toTopOf="@+id/fragment_container"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/A"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="A"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/barChartResultats"
        app:layout_constraintTop_toBottomOf="@+id/barChartResultats" />

    <TextView
        android:id="@+id/B"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/A"
        app:layout_constraintStart_toEndOf="@+id/A" />

    <TextView
        android:id="@+id/C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/B"
        app:layout_constraintStart_toEndOf="@+id/B" />

    <TextView
        android:id="@+id/D"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_marginLeft="30dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/C"
        app:layout_constraintStart_toEndOf="@+id/C" />

    <TextView
        android:id="@+id/E"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/D"
        app:layout_constraintStart_toEndOf="@+id/D" />

    <TextView
        android:id="@+id/F"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/E"
        app:layout_constraintStart_toEndOf="@+id/E" />

    <TextView
        android:id="@+id/G"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/F"
        app:layout_constraintStart_toEndOf="@+id/F" />

    <TextView
        android:id="@+id/H"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:layout_marginLeft="28dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/G"
        app:layout_constraintStart_toEndOf="@+id/G" />

    <TextView
        android:id="@+id/I"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/H"
        app:layout_constraintStart_toEndOf="@+id/H" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/afficher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp"
        android:background="@drawable/background_button"
        android:text="afficher"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_button"
        android:text="Clear All"
        android:textAllCaps="false"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/afficher" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".enseignant.ResultatQuestionnaireFinal"
    android:background="@color/darkblue2"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/resultatsNoir"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_50"
        android:layout_marginTop="@dimen/default_margin"
        android:text="RÉSULTATS"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </TextView>

    <TextView
        android:id="@+id/resultats"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RÉSULTATS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/default_margin">
    </TextView>


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="375dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultats"
        />

    <TextView
        android:id="@+id/Ares"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:text="A"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/barChart"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />

    <TextView
        android:id="@+id/Bres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:layout_marginLeft="32dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Ares"
        app:layout_constraintStart_toEndOf="@+id/Ares" />

    <TextView
        android:id="@+id/Cres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Bres"
        app:layout_constraintStart_toEndOf="@+id/Bres" />

    <TextView
        android:id="@+id/Dres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Cres"
        app:layout_constraintStart_toEndOf="@+id/Cres" />

    <TextView
        android:id="@+id/Eres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Dres"
        app:layout_constraintStart_toEndOf="@+id/Dres" />

    <TextView
        android:id="@+id/Fres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Eres"
        app:layout_constraintStart_toEndOf="@+id/Eres" />

    <TextView
        android:id="@+id/Gres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Fres"
        app:layout_constraintStart_toEndOf="@+id/Fres" />

    <TextView
        android:id="@+id/Hres"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="H"
        android:layout_marginLeft="28dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Gres"
        app:layout_constraintStart_toEndOf="@+id/Gres" />

    <TextView
        android:id="@+id/Ires"
        style="@style/TextStyle"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I"
        android:layout_marginLeft="30dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/Hres"
        app:layout_constraintStart_toEndOf="@+id/Hres" />

    <TextView
        android:id="@+id/totalFin"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Total : "
        app:layout_constraintEnd_toEndOf="@+id/resultats"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/resultats"
        app:layout_constraintTop_toBottomOf="@+id/Eres">

    </TextView>

    <TextView
        android:id="@+id/nbTotalFin"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/totalFin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/totalFin"
        app:layout_constraintTop_toTopOf="@+id/totalFin">

    </TextView>

    <Button
        android:id="@+id/btn_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background_button"
        android:text="Quitter"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btn_sauvegarder"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="80dp"

        app:layout_constraintTop_toTopOf="@+id/btn_sauvegarder" />

    <Button
        android:id="@+id/btn_sauvegarder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/background_button"
        android:text="Sauvegarder"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="80dp"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalFin" />


</androidx.constraintlayout.widget.ConstraintLayout>
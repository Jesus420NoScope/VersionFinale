<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/darkblue2">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/questionnaire"
        android:layout_width="100dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Question :"
        android:textStyle="bold"
        android:background="@drawable/background_button"
        app:layout_constraintBottom_toTopOf="@+id/view"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="@+id/view">
    </TextView>

    <TextView
        android:id="@+id/participation"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Participation :"
        android:background="@drawable/background_button"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="..........Titre..........."
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/questionnaire"
        app:layout_constraintStart_toEndOf="@+id/questionnaire"
        app:layout_constraintTop_toTopOf="@+id/questionnaire">

    </TextView>

    <TextView
        android:id="@+id/nombreParticipation"
        android:text="50"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/participation"
        app:layout_constraintStart_toEndOf="@id/participation"
        app:layout_constraintTop_toTopOf="@+id/participation">

    </TextView>

    <TextView
        android:id="@+id/bonnesReponse"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_button"
        android:gravity="center"
        android:text="Bonnes rÃ©ponses :"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/nombreParticipation"
        app:layout_constraintTop_toBottomOf="@+id/view">

    </TextView>

    <TextView
        android:id="@+id/nombreResultats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text="5"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/bonnesReponse"
        app:layout_constraintTop_toBottomOf="@+id/view">

    </TextView>



</androidx.constraintlayout.widget.ConstraintLayout>
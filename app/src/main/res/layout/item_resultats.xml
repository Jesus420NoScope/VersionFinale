<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardBackgroundColor="#1D3D67"
    app:cardCornerRadius="50dp"
    app:cardElevation="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintResultat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="center">
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2"
            android:layout_width="20dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionnaire"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:text="Question :"
            android:textStyle="bold"

            app:layout_constraintBottom_toTopOf="@+id/view"

            app:layout_constraintStart_toStartOf="@+id/participation">

        </TextView>

        <TextView
            android:id="@+id/participation"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:background="@drawable/background_button"
            android:gravity="center"
            android:text="Participation :"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/nombreParticipation"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toBottomOf="@+id/view">

        </TextView>

        <TextView
            android:id="@+id/titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:text="..........Titre..........."
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/questionnaire"
            app:layout_constraintStart_toEndOf="@+id/questionnaire"
            app:layout_constraintStart_toStartOf="@+id/nombreParticipation"
            app:layout_constraintTop_toTopOf="@+id/questionnaire">

        </TextView>

        <TextView
            android:id="@+id/nombreParticipation"
            android:layout_width="20dp"
            android:layout_height="wrap_content"



            android:text="50"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/participation"
            app:layout_constraintEnd_toStartOf="@+id/view2"

            app:layout_constraintTop_toTopOf="@+id/participation">

        </TextView>

        <TextView
            android:id="@+id/bonnesReponse"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:background="@drawable/background_button"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:text="Bonnes rÃ©ponses :"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/view">

        </TextView>

    <TextView
        android:id="@+id/lettreResultats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/bonnesReponse"
        app:layout_constraintTop_toBottomOf="@+id/view">

    </TextView>
        <TextView
        android:id="@+id/nombreResultats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/lettreResultats"
        app:layout_constraintTop_toBottomOf="@+id/view">

    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue2"
    android:statusBarColor="@color/black"
    tools:context=".eleve.EtudiantRepondre">

    <ImageView
        android:id="@+id/button_back3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <TextView
        android:id="@+id/repondre_au_questionnaire"
        android:layout_width="@dimen/margin_titre_ver"
        android:layout_height="@dimen/margin_titre_hor"

        android:layout_marginTop="85dp"
        android:fontFamily="@font/kanit"
        android:text="Répondez à la question suivante:"
        android:textAlignment="center"

        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
<androidx.cardview.widget.CardView
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toStartOf="@+id/cardViewB"
    app:layout_constraintTop_toTopOf="@+id/cardViewB"
    android:layout_marginRight="@dimen/margin_60"
    >

    <Button
    android:id="@+id/buttonA"
    style="@style/TextStyle"
    android:textColor="@color/black"
    android:layout_width="60dp"
    android:layout_height="60dp"
        android:background="@color/white"
    android:text="A"
    android:textStyle="bold"


    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@+id/repondre_au_questionnaire"
    app:layout_constraintTop_toBottomOf="@+id/repondre_au_questionnaire"
    android:layout_marginTop="70dp">
        <Button
        android:id="@+id/buttonB"
        style="@style/TextStyle"
        android:textColor="@color/black"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/white"
        android:text="B"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewC"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintBottom_toBottomOf="@id/cardViewB"
    app:layout_constraintStart_toEndOf="@+id/cardViewB"
    android:layout_marginLeft="@dimen/margin_60">
    <Button
    android:id="@+id/buttonC"
    style="@style/TextStyle"
    android:background="@color/white"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text="C"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@id/cardView"
    app:layout_constraintStart_toStartOf="@id/cardView"
    app:layout_constraintTop_toBottomOf="@id/cardView"
    android:layout_marginTop="@dimen/margin_60">
    <Button
    android:id="@+id/buttonD"
    style="@style/TextStyle"
    android:background="@color/white"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text="D"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewE"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@+id/cardViewB"
    app:layout_constraintStart_toStartOf="@+id/cardViewB"
    app:layout_constraintTop_toBottomOf="@+id/cardViewB"
    android:layout_marginTop="@dimen/margin_60">
    <Button
    android:id="@+id/buttonE"
    style="@style/TextStyle"
    android:background="@color/white"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text="E"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewF"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@+id/cardViewC"
    app:layout_constraintStart_toStartOf="@+id/cardViewC"
    app:layout_constraintTop_toBottomOf="@+id/cardViewC"
    android:layout_marginTop="@dimen/margin_60">
    <Button
    android:id="@+id/buttonF"
    style="@style/TextStyle"
    android:background="@color/white"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text="F"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@+id/cardViewD"
    app:layout_constraintStart_toStartOf="@+id/cardViewD"
    app:layout_constraintTop_toBottomOf="@+id/cardViewD"
    android:layout_marginTop="@dimen/margin_60"
    ><Button
    android:id="@+id/buttonG"
    style="@style/TextStyle"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:background="@color/white"
    android:text="G"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewH"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@+id/cardViewE"
    app:layout_constraintStart_toStartOf="@+id/cardViewE"
    app:layout_constraintTop_toBottomOf="@+id/cardViewE"
    android:layout_marginTop="@dimen/margin_60">
    <Button
    android:id="@+id/buttonH"
    style="@style/TextStyle"
    android:background="@color/white"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:text="H"
    android:textStyle="bold"
    android:textColor="@color/black"
    /></androidx.cardview.widget.CardView>

<androidx.cardview.widget.CardView
    android:id="@+id/cardViewI"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:layout_constraintEnd_toEndOf="@+id/cardViewF"
    app:layout_constraintStart_toStartOf="@+id/cardViewF"
    app:layout_constraintTop_toBottomOf="@+id/cardViewF"
    android:layout_marginTop="@dimen/margin_60">
    <Button
        android:id="@+id/buttonI"
        style="@style/TextStyle"
        android:background="@color/white"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="I"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
</androidx.cardview.widget.CardView>


    <ImageView
        android:id="@+id/imageQrCodeEleve"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewH" />

</androidx.constraintlayout.widget.ConstraintLayout>